FROM golang:1.19.1 as builder
ADD . /app
WORKDIR /app
RUN go mod tidy
RUN go build -a -tags "netgo" -installsuffix netgo -ldflags="-s -w -extldflags \"-static\"" -o bin/ ./...

FROM gcr.io/distroless/base-debian10
COPY --from=builder /app/bin/shorten-redirector /usr/local/bin/shorten-redirector
ENTRYPOINT ["/usr/local/bin/shorten-redirector", "start"]
